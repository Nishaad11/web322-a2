<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', {page: '/solutions/projects'}) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-box mb-8">
      <div class="hero-content text-center">
        <h1 class="text-5xl font-bold">Climate Projects</h1>
        <p class="py-6">Filter by sector:</p>
        <div class="flex justify-center gap-2 flex-wrap">
          <a href="/solutions/projects?sector=industry" class="btn btn-outline">Industry</a>
          <a href="/solutions/projects?sector=transportation" class="btn btn-outline">Transportation</a>
          <a href="/solutions/projects?sector=electricity" class="btn btn-outline">Electricity</a>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(p => { %>
            <tr>
              <td><%= p.title %></td>
              <td>
                <a href="/solutions/projects?sector=<%= p.sector.toLowerCase() %>" class="btn btn-sm btn-secondary">
                  <%= p.sector %>
                </a>
              </td>
              <td><%= p.summary_short %></td>
              <td>
                <a href="/solutions/projects/<%= p.id %>" class="btn btn-sm btn-primary">Details</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>