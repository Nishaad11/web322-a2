<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.title %></title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', {page: ''}) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-box mb-8">
      <div class="hero-content text-center">
        <h1 class="text-5xl font-bold"><%= project.title %></h1>
        <p>Below, you will find detailed information about the project: <%= project.title %>.</p>
      </div>
    </div>

    <div class="prose max-w-none mb-6">
      <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="rounded-lg shadow-xl w-full max-w-2xl mx-auto mb-6">
      <h2>Introduction</h2>
      <p><%= project.intro_short || "No intro available." %></p>
      <h2>Impact</h2>
      <p><%= project.impact %></p>
      <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-primary">Learn More</a>
    </div>

    <div id="quote" class="mt-8 p-6 bg-base-200 rounded-box text-center">
      <p>Loading quote...</p>
    </div>

    <a href="#" onclick="history.back(); return false;" class="btn btn-secondary mt-6">Back</a>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(r => r.json())
        .then(d => {
          document.getElementById("quote").innerHTML = `
            <blockquote class="text-xl italic">"${d.quote}"</blockquote>
            <p class="mt-2 text-right">- ${d.author}</p>
          `;
        })
        .catch(() => document.getElementById("quote").innerHTML = "<p>Failed to load quote.</p>");
    });
  </script>
</body>
</html>